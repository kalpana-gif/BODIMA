<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Registration">

    <EditText
        android:id="@+id/regphoneinput"
        android:layout_width="263dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/regemailinput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/regName"
        app:layout_constraintTop_toBottomOf="@+id/regnameinput" />

    <EditText
        android:id="@+id/regemailinput"
        android:layout_width="263dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/regpasswordinput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/regName"
        app:layout_constraintTop_toBottomOf="@+id/regphoneinput" />

    <EditText
        android:id="@+id/regpasswordinput"
        android:layout_width="263dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/confirmpwdinput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/regName"
        app:layout_constraintTop_toBottomOf="@+id/regemailinput" />

    <EditText
        android:id="@+id/confirmpwdinput"
        android:layout_width="263dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="38dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/regbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toEndOf="@+id/regName"
        app:layout_constraintTop_toBottomOf="@+id/regpasswordinput" />

    <TextView
        android:id="@+id/pwd"
        android:layout_width="93dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:text="@string/password"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/regpasswordinput"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/confirmpassword"
        android:layout_width="104dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:text="@string/confirmpassword"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/confirmpwdinput"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="93dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:text="@string/mail"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/regemailinput"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="416dp"
        android:layout_height="78dp"
        android:background="#ff5500"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="414dp"
        android:layout_height="101dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:srcCompat="@drawable/top2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RegHeader"
        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />

    <TextView
        android:id="@+id/regName"
        android:layout_width="93dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:text="Name:"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/regnameinput"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="93dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:text="@string/phone"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/regphoneinput"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/regnameinput"
        android:layout_width="263dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textSize="18dp"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/regphoneinput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/regName"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/regbutton"
        android:layout_width="159dp"
        android:layout_height="44dp"
        android:background="@drawable/regsterbtn"
        android:text="Register"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.934" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:background="@color/orangered"
        app:srcCompat="@drawable/backbtn"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="-1dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="51dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007"
        app:srcCompat="@drawable/communityimg" />

</androidx.constraintlayout.widget.ConstraintLayout>